<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book.id), method: :delete, local: false do %>
   ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book.id), method: :post, local: false do %>
   ♡<%= book.favorites.count %>
  <% end %>
<% end %>